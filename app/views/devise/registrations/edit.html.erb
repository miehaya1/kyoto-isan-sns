<% provide(:title, "Edit user") %>
<h1>会員情報</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
        <%= render 'shared/error_messages', object: f.object %>
      
        <div class="field">
          <%= f.label :名前, class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="field">
          <%= f.label :パスワード , class: "control-label" %> <i>(パスワードは入力して下さい)</i>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード再入力, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      
        <div class="field">
          <%= f.label :新しいパスワード, class: "control-label" %> <i>(パスワードを変更する時は入力して下さい)</i>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "変更手続き", class: "btn btn-lg btn-primary" %>
        </div>
        
        <br />
        <%= gravatar_for resource %>
        <a href="http://gravatar.com/emails">変更</a>
    </div>
  </div>
<% end %>