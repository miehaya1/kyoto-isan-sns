<% provide(:title, 'Sign up') %>
<h1>登録</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :名前, class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %> 
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "control-label" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> 桁以上必要)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード再入力, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
  </div>
<% end %>